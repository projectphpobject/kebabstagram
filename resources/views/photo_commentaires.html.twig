{% extends 'main.html.twig' %}

{% block content %}

<h1>{{nom_form}}</h1>

        <form name="form_inscription" action="{{action}}" method="{{method}}" enctype="multipart/form-data">
            

            <fieldset>
                <legend>Vos informations</legend>

                <label for="pseudo">Pseudonyme </label><input type="text" id="pseudo" name="pseudo" value="{{ user.pseudo }}">
                <label for="mail">Adresse email </label><input type="email" id="mail" name="mail" value="{{ user.email }}">
                
            </fieldset>

            <fieldset>
                <legend>Commentaire</legend>
                
                <label for='titre'>Titre de la photo Associée </label><input type='text' name='titre' value="{{title_photo}}">
                
                <label for='categorie'>Catégorie Associée :</label>
                <select id="categorie" name="categorie">
                        <option disabled selected>Choisir une catégorie</option>
                        
                </select>

                
                <label for='description'>Message</label>
                
                <textarea id="description" name='message' cols='50' rows='10' placeholder="commentaires #tags"></textarea>
                
                <div class="boutons">                    
                    <input type='submit' name='valider' id="valider" class='bouton' value='Valider'>
                    {{ csrf.field | raw }}
                   
                </div>
                
            </fieldset>

        </form>

        <script src="{{ base_url() }}/js/jquery.min.js"></script>
        <script src="{{ base_url() }}/js/validate.min.js"></script>
        <script src="{{ base_url() }}/js/validation_form_kebab.js"></script>
    
{% endblock %}

