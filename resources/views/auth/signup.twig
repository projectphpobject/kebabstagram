{% extends 'templates/app.twig' %}

 {% block content %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
           <div class="panel panel-default">
               <div class="panel-heading">S'enregistrer</div>
               <div class="panel-body">

                   <form action="{{  path_for('auth.signup') }}" method="post" autocomplete="off">
                       <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                           <label for="email">Email</label>
                           <input type="text" name="email" id="email" placeholder="you@domain.fr" class="form-control" value="{{ old.email }}" >
                           {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                           {% endif %}
                       </div>
                       <div class="form-group{{ errors.nom ? ' has-error' : '' }}">
                           <label for="nom">Nom</label>
                           <input type="text" name="nom" id="nom"  class="form-control" value="{{ old.nom }}">
                           {% if errors.nom %}
                               <span class="help-block">{{ errors.nom | first }}</span>
                           {% endif %}
                       </div>
                       <div class="form-group{{ errors.prenom ? ' has-error' : '' }}">
                           <label for="prenom">Pr√©nom</label>
                           <input type="text" name="prenom" id="prenom"  class="form-control" value="{{ old.prenom }}">
                           {% if errors.prenom %}
                               <span class="help-block">{{ errors.prenom | first }}</span>
                           {% endif %}
                       </div>
                       <div class="form-group{{ errors.pseudo ? ' has-error' : '' }}">
                           <label for="pseudo">Login</label>
                           <input type="text" name="pseudo" id="pseudo"  class="form-control" value="{{ old.pseudo }}">
                           {% if errors.pseudo %}
                               <span class="help-block">{{ errors.pseudo | first }}</span>
                           {% endif %}
                       </div>
                       <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                           <label for="password">Password</label>
                           <input type="password" name="password" id="password"  class="form-control">
                           {% if errors.password %}
                               <span class="help-block">{{ errors.password | first }}</span>
                           {% endif %}
                       </div>
                       <button type="submit" class="btn btn-default">Sign Up</button>
                       {{ csrf.field | raw }}
                   </form>

               </div>


           </div>

        </div>
   </div>


 {% endblock %}